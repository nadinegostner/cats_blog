        <h1 class="display-4">CATalog</h1>
        <p class="lead">Share your Cat images with friends!</p>
    </div>

    <div class="row">
        {% if error %}
            <div class="alert alert-warning">
                {{ error }}
            </div>
        {% endif %}

        <div class="col-md-6 offset-md-3">
            <h3>Beitrag erstellen</h3>

            <form id="image-form" action="/chronik" method="post" enctype="multipart/form-data" id="pictureForm">
                <input id="image" type="file" name="image" style="display: none"/>
                <input id="text-beschreibung" type="text" name="text" placeholder="Beschreibe dein Katzenfoto"/>
                <button id="image-share" class="btn btn-primary">Ausw√§hlen und Teilen</button>
            </form>            
        </div>
    </div>

    {% for cat in cats %}

        <div class="card col-md-6 offset-md-3">
            <img class="card-img-top" src="/{{ cat.file }}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{ cat.user }}</h5>
                <!--h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6-->
                <p class="card-text">{{ cat.text }}</p>
            </div>
        </div>

    {% endfor %}

    <!-- POSTS VON ALLEN HIER -->

    <script>
        let image = document.querySelector("#image");
        let imageShare = document.querySelector("#image-share");
        let imageForm = document.querySelector("#image-form");

        imageShare.addEventListener('click', function(e) {
            e.preventDefault();
            image.click();
        });
        image.addEventListener('change', function() {
            imageForm.submit();
        })
    </script>
